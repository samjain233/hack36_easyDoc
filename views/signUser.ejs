<!-- sign up page  -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="./css/signup73.css">
</head>

<body>

    <img class="bgimg" src="./images/bg3.avif" alt="">
    <div class="signupFrm">
        <form action="/signUser" class="form" method="post">
          <h1 class="title">Sign up</h1>
    
          <div class="inputContainer">
            <input type="text" class="input" placeholder="a" name="name" autocomplete="off">
            <label for="" class="label">Name</label>
          </div>

          <div class="inputContainer">
            <input type="email" class="input" placeholder="a" name="email" autocomplete="off">
            <label for="" class="label">Email</label>
          </div>
    
          <div class="inputContainer">
            <input type="text" class="input" placeholder="a" name="age" autocomplete="off">
            <label for="" class="label">Age</label>
          </div>
    
          <div class="inputContainer">
            <input type="password" class="input" placeholder="a" name="password" >
            <label for="" class="label">Password</label>
          </div>
    
          <div class="inputContainer">
            <input type="password" class="input" placeholder="a" name="repassword">
            <label for="" class="label">Confirm Password</label>
          </div>
    
          <input type="submit" class="submitBtn" value="Sign up">
        </form>

        
      </div>

</body>
</html>